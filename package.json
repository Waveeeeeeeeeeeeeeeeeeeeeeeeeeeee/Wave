{
  "name": "wave",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "postinstall": "node ./scripts/rename/rename.js && npm run cleanup",
    "cleanup": "node ./scripts/cleanup/cleanup.js",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "commit": "cz",
    "standard": "standard-version",
    "pre-release": "node ./scripts/release/release.js",
    "release": "npm run pre-release && npm run standard --release-as 0.0.3 && git push origin main --follow-tags",
    "update": "git pull"
  },
  "files": [
    "**/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.1",
    "@reduxjs/toolkit": "^2.5.0",
    "@sanity/client": "^6.27.1",
    "framer-motion": "^12.0.5",
    "i18next": "^24.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.0",
    "react-redux": "^9.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@npmcli/package-json": "^5.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.4.2",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
